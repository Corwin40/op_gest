{% extends 'admin.html.twig' %}

{% block title %}Calendrier index
{% endblock %}

{% block content %}
	<h1>Calendrier index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Debut</th>
				<th>Fin</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for calendrier in calendriers %}
				<tr>
					<td>{{ calendrier.id }}</td>
					<td>{{ calendrier.Titre }}</td>
					<td>{{ calendrier.Debut ? calendrier.Debut|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ calendrier.Fin ? calendrier.Fin|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ calendrier.Description }}</td>
					<td>
						<a href="{{ path('calendrier_show', {'id': calendrier.id}) }}">show</a>
						<a href="{{ path('calendrier_edit', {'id': calendrier.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('calendrier_new') }}">Create new</a>
{% endblock %}
