                <div class="col-4">
                    {{ form_label(form.firstName, 'Indiquez votre Prénom & Nom de famille :', {'label_attr': {'class':'form-label'}}) }}
                </div>
                <div class="col-3">
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Votre prénom'}}) }}
