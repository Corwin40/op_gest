            </div>
        </div>
        <div class="col-12">
            <div class="row mb-1 mt-1 g-1">
                <div class="col-4">
                    <b>{{ form_label(form.email, 'Indiquez votre E-mail pour tout contact :', {'label_attr': {'class':'form-label'}}) }}</b>
                </div>
                <div class="col-3">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-sm', 'placeholder':''}}) }}
                </div>
