{{ form_start(form) }}

        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <p class="text-center">Pour que nous puissions vous accompagner dans vos demandes où vos besoins, veuillez inscrire votre prénom, votre nom ainsi qu'un élement de contact
                        <br>Les champs en gras sont obligatoires.
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-4">
                            {{ form_label(form.firstName, 'Indiquez votre Prénom & Nom de famille :', {'label_attr': {'class':'form-label'}}) }}
                        </div>
                        <div class="col-3">
                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Votre prénom'}}) }}
                        </div>
                        <div class="col-3">
                            {{ form_widget(form.lastName, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Votre nom'}}) }}
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-4">
                            {{ form_label(form.phone, 'Indiquez votre téléphone :', {'label_attr': {'class':'form-label'}}) }}
                        </div>
                        <div class="col-3">
                            {{ form_widget(form.phone, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'05.58.58.58.58'}}) }}
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row mb-1 mt-1 g-1">
                        <div class="col-4">
                            <b>{{ form_label(form.email, 'Indiquez votre E-mail pour tout contact :', {'label_attr': {'class':'form-label'}}) }}</b>
                        </div>
                        <div class="col-3">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-sm', 'placeholder':''}}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
<div class="card-footer">
    <button class="btn btn-sm btn-outline-primary">{{ button_label|default("Passer à l'étape suivante") }}</button>
</div>


{{ form_rest(form) }}
{{ form_end(form) }}
