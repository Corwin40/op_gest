{% extends 'admin.html.twig' %}

{% block title %}Formulaire de connaissances | Club Micro Saint Pierre{% endblock %}

{% block content %}
<section class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Liste des accompagnements possibles</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th></th>
                    <th>Type d'accompagnement</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
        {% for type_acc in type_accs %}
            <tr>
                <td></td>
                <td>{{ type_acc.name }}</td>
                <td>
                    <a href="{{ path('op_admin_typeacc_show', {'id': type_acc.id}) }}">show</a>
                    <a href="{{ path('op_admin_typeacc_edit', {'id': type_acc.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <a href="{{ path('op_admin_typeacc_new') }}">Nouveau type d'accompagnement</a>
        </div>
    </div>
</section>
{% endblock %}
